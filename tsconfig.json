{
	"compilerOptions": {
		"target": "es5",

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"isolatedModules": false,
		"lib": ["es6", "dom"],

		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": true,
		// "noEmit": true,
		"outDir": "./dist"
	},
	"exclude": ["node_modules"],
	"include": ["api/**/*", "handler.ts"]
}
